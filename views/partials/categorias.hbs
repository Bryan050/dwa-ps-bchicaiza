      <a href="#">
        <div class="caja-3 contenedor-flotante">
          <img
            src="images/pizza.jpg"
            alt="Pizza"
            class="img-responsive img-redondeada"
          />
          <h3 class="texto-blanco texto-flotante">{{this.0.nombre}}</h3>

        </div>
      </a>
      <a href="#">
        <div class="caja-3 contenedor-flotante">
          <img
            src="images/burger.jpg"
            alt="Burger"
            class="img-responsive img-redondeada"
          />
          <h3 class="texto-blanco texto-flotante">{{this.1.nombre}}</h3>

        </div>
      </a>
      <a href="#">
        <div class="caja-3 contenedor-flotante">
          <img
            src="images/momo.jpg"
            alt="Empanada"
            class="img-responsive img-redondeada"
          />

          <h3 class="texto-blanco texto-flotante">{{this.2.nombre}}</h3>

        </div>
      </a>
    {{/each}}
